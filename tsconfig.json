{
  "compilerOptions": {
    "typeRoots": [
      "node_modules/@types", // 默认值
      "src/types"
    ],
    "module": "ESNext",
    "target": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "lib": [
      "ESNext"
    ],
    "sourceMap": false,
    "noEmitOnError": true,
    "noImplicitAny": false
  },
  "include": [
    "src/*",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "*.d.ts",
    "src/types/types.d.ts"
  ],
  "exclude": [
    "node_modules",
    "examples",
    "dist"
  ]
}